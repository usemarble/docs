{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Marble Documentation",
  "colors": {
    "primary": "#584dff",
    "light": "#7b73ff",
    "dark": "#5b4ffc"
  },
  "favicon": "/favicon.svg",
  "contextual": {
    "options": [
      "copy",
      "chatgpt",
      "claude",
      {
        "title": "Open in T3 Chat",
        "description": "Ask questions about this page",
        "icon": "https://t3.chat/favicon.ico",
        "href": {
          "base": "https://t3.chat/new",
          "query": [
            {
              "key": "q",
              "value": "Read from https://docs.marblecms.com/$path so I can ask questions about it."
            }
          ]
        }
      },
      "mcp"
    ]
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "/guides/introduction",
              "/guides/quickstart"
            ]
          },
          {
            "group": "Integrations",
            "pages": [
              "/guides/integrations/astro",
              "/guides/integrations/nextjs",
              "/guides/integrations/tanstack"
            ]
          },
          {
            "group": "Features",
            "pages": ["/guides/webhooks"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Introduction",
            "pages": ["/api/introduction"]
          },
          {
            "group": "Endpoints",
            "pages": [
              "/api/endpoint/posts",
              "/api/endpoint/post",
              "/api/endpoint/tags",
              "/api/endpoint/categories",
              "/api/endpoint/authors"
            ]
          },
          {
            "group": "Miscellaneous",
            "pages": ["/api/pagination", "/api/types"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Blog",
          "href": "https://marblecms.com/blog",
          "icon": "newspaper"
        },
        {
          "anchor": "Community",
          "href": "https://discord.marblecms.com/",
          "icon": "discord"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "footer": {
    "socials": {
      "x": "https://x.com/usemarblecms",
      "github": "https://github.com/usemarble"
    }
  }
}
